# print current git status info
alias git-s="git status"
alias gs="git-s"

# print current branch name
alias git-b="git branch --show-current | tr -d '\n'"

# Download all new data
alias git-l="git pull"
alias gl="git-l"

# Checkout to dev branch
alias git-cd="git checkout dev"
alias gcd="git-cd"

# Checkout to new branch
alias git-cb="git checkout -b"
alias gcb="git-cb"

# Rebase current branch agains dev
alias git-rbd="git rebase dev"
alias grbd="git-rbd"

# Continue in rebasing
alias git-rbc="git rebase --continue"
alias grbc="git-rbc"

# Abort current rebase
alias git-rba="git rebase --abort"
alias grba="git-rba"

# Push force
alias gpf="git push -f"

# Delete all local branches except "dev"
alias git-clean="git branch | grep -v \"dev\" | xargs git branch -D"
alias gn="git-clean"
